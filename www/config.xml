<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" xmlns:android = "http://schemas.android.com/apk/res/android" id="com.armanco.lokabina" version="1.0.3" >
	<name>لوکابینا</name>
	<description></description>
	<author href="http://arman.co.com">armanco</author>
    <preference name="permissions"    		      value="none" />
	<preference name="phonegap-version" 		  value="cli-6.3.0" />
    <preference name="orientation"                value="default" />        <!-- all: default means both landscape and portrait are enabled -->
    <preference name="target-device"              value="universal" />      <!-- all: possible values handset, tablet, or universal -->
    <preference name="fullscreen"                 value="false" />           <!-- all: hides the status bar at the top of the screen -->
    <preference name="android-minSdkVersion"      value="9" />              <!-- android: MIN SDK version supported on the target device. MAX version is blank by default. -->
    <preference name="android-installLocation"    value="auto" />           <!-- android: app install location. 'auto' will choose. 'internalOnly' is device memory. 'preferExternal' is SDCard. -->
    <gap:plugin name="cordova-plugin-android-iab" source="npm" />
    <gap:plugin name="cordova-plugin-whitelist" source="npm" />
    <gap:plugin name="cordova-plugin-splashscreen" source="npm" />
    <allow-navigation href="http://lokabina.com/*" />
    <allow-intent href="http://lokabina.com/*" />
    <access origin="http://lokabina.com" />
    <access origin="*" />
    <icon src="res/icon/icon.png" />
	<icon src="res/icon/android/icon-36-ldpi.png"   gap:platform="android"    gap:qualifier="ldpi" />
    <icon src="res/icon/android/icon-48-mdpi.png"   gap:platform="android"    gap:qualifier="mdpi" />
    <icon src="res/icon/android/icon-72-hdpi.png"   gap:platform="android"    gap:qualifier="hdpi" />
    <icon src="res/icon/android/icon-96-xhdpi.png"  gap:platform="android"    gap:qualifier="xhdpi" />
    <icon src="res/icon/android/icon-144-xxhdpi.png"  gap:platform="android"    gap:qualifier="xxhdpi" />
    <icon src="res/icon/android/icon-192-xxxhdpi.png"  gap:platform="android"    gap:qualifier="xxxhdpi" />
    <preference name="SplashScreen" value="splash" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <splash src="res/screen/android/screen-hdpi-portrait.png" />
    <splash src="res/screen/android/screen-ldpi-portrait.png"  platform="android" density="port-ldpi" />
    <splash src="res/screen/android/screen-mdpi-portrait.png"  platform="android" density="port-mdpi" />
    <splash src="res/screen/android/screen-hdpi-portrait.png"  platform="android" density="port-hdpi" />
    <splash src="res/screen/android/screen-xhdpi-portrait.png" platform="android" density="port-xhdpi" />
	<splash src="res/screen/android/screen-xhdpi-landscape.png" platform="android" density="land-xhdpi" />
	<splash src="res/screen/android/screen-hdpi-landscape.png"  platform="android" density="land-hdpi" />
	<splash src="res/screen/android/screen-mdpi-landscape.png"  platform="android" density="land-mdpi" />
	<splash src="res/screen/android/screen-ldpi-landscape.png"  platform="android" density="land-ldpi" />
    <gap:config-file platform="android" parent="/manifest" mode="add">
        <uses-permission android:name="com.farsitel.bazaar.permission.PAY_THROUGH_BAZAAR" />
    </gap:config-file>
</widget>